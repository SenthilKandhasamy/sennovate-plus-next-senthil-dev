// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource prisma {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String                       @id @default(cuid())
  companyEmail      String                       @unique()
  companyName       String
  jobTitle          String
  country           String?
  state             String?
  firstName         String
  lastName          String
  phone             String?
  partnershipType   PartnershipType
  remark            String?
  applicationStatus PartnershipApplicationStatus @default(Submitted)
  approvedServices  ApprovedService[]
  createdAt         DateTime                     @default(now())
}

enum PartnershipType {
  Referral
  Reseller
}

enum PartnershipApplicationStatus {
  Submitted
  UnderProcess
  Approved
  Rejected
}

model ApprovedService {
  id          Int    @id @default(autoincrement())
  partner     User   @relation(fields: [partnerId], references: [id])
  partnerId   String
  serviceSlug String
  priceFactor Float?
}
