// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource prisma {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String                       @id @default(cuid())
  companyEmail      String                       @unique()
  companyName       String
  jobTitle          String
  country           String?
  state             String?
  firstName         String
  lastName          String
  phone             String?
  partnershipType   PartnershipType
  remark            String?
  applicationStatus PartnershipApplicationStatus @default(Submitted)
}

enum PartnershipType {
  Referral
  Reseller
}

enum PartnershipApplicationStatus {
  Submitted
  UnderProcess
  Approved
  Rejected
}
